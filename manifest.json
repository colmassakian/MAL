{
  "manifest_version": 2,

  "name": "KA and MAL",
  "description": "Links between KissAnime and MAL",
  "version": "2.0",

  "browser_action": {
    "default_icon": "images/mal-icon-19.png",
    "default_title": "MAL"
},
"content_scripts": [{
  "matches": ["*://*.kissanime.nz/*", "*://*.myanimelist.net/*"],
  "js": ["content.js"]
}],
"permissions": ["activeTab"]
}